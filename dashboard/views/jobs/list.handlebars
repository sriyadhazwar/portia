<!-- main section -->
<main class="main-container">
    <!-- page content -->
    <section style="padding: 16px 24px">
        <div class="pb-5">
            <h3>Jobs</h3>
            <div style="padding-bottom: 16px; padding-top: 16px;">
                <a class="btn {{allFilterClass}}" href="/job?page={{page}}&status=all">All</a>
                <a class="btn {{waitingFilterClass}}" href="/job?page={{page}}&status=waiting">Waiting</a>
                <a class="btn {{runningFilterClass}}" href="/job?page={{page}}&status=running">Running</a>
                <div class="float-sm-right">
                    <a href="/new-job" class="btn btn-outline-primary">Create</a>
                </div>
            </div>

            {{#if showAlert}}
            <div class="alert {{alertClass}}" role="alert">
                {{alertMessage}}
            </div>
            {{/if}}

            <div id="job">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Job</th>
                            <th>Driver</th>
                            <th>Created At</th>
                            <th>Finish At</th>
                        </tr>
                    </thead>

                    <tbody>
                        {{#each jobs}}
                        <tr>
                            <td>{{name}} </td>
                            <td>{{lookup ../driverMapping.name driver_id}} </td>
                            <td>{{created_at}} </td>
                            <td>{{updated_at}} </td>
                        </tr>
                        {{/each}}
                    </tbody>

                </table>

                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        {{#each pageArray}}
                        <li class="page-item {{ active }}">
                            <a class="page-link" href="/job?page={{index}}&status={{../status}}">{{caption}}</a>
                        </li>
                        {{/each}}
                    </ul>
                </nav>

            </div>
    </section>
</main>